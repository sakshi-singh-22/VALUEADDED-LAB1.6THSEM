#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;
int main(){
int t;
cin>>t;
while(t--){
    int n;
    cin>>n;
    int a=0;
        for(int i=0;i<n;i++){
            for(int j=0;j<n;j++){
                int x;
                cin>>x;
                if(i==0 || j==0 || i==n-1 || j==n-1 || i==j || i+j==n-1){
                    a+=x;
                }
            }
        }
        cout<<a<<"\n";
    }
    return 0;
}

